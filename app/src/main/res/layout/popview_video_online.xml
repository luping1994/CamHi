<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/popview_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dip" >

    <Button
        android:id="@+id/btn_play_video_online"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/click_btn_bg"
        android:text="@string/btn_play_video_online"
        android:textColor="@color/font_btn" />

    <Button
        android:id="@+id/btn_downlinad_video_online"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/click_btn_bg"
        android:text="@string/btn_downlinad_video_online"
        android:textColor="@color/font_btn" />

</LinearLayout>